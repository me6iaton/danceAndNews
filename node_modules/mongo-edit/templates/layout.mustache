<!DOCTYPE html>
<!--[if IE]>         <html class="ie" lang="en"> <![endif]-->
<!--[if !(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{title}}{{^title}}Mongo Edit{{/title}}</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/website.css">
  </head>

  <body>
    <script src="/assets/jquery/jquery-1.8.3.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/assets/bootstrap/js/bootstrap.js" type="text/javascript" charset="utf-8"></script>
    <script src="/assets/ace/ace.js" type="text/javascript" charset="utf-8"></script>
    <script src="/assets/ace/mode-javascript.js" type="text/javascript" charset="utf-8"></script>

    <div class="container">
      <div class="row">
        <div class="span3">
          <h1 class="top-left-title"><a href="/">Mongo Edit</a></h1>
          <ul class="nav nav-tabs nav-stacked" id="sidenav">
            {{#collections}}
            <li><a href="/{{.}}">{{.}}</a></li>
            {{/collections}}
          </ul>
          <!-- Form to create a new collection -->
          <form id="createCollection" class="form-inline" method="post">
            <input type="text" id="collectionName" placeholder="Create a new collection">
            <button type="submit" style="display:none">Go</button>
          </form>
          <script>
            $('#createCollection').on('submit', function (event) {
              var collectionName = $('#collectionName').val();
              event.preventDefault();
              if (collectionName.length === 0) { return; }
              window.location = '/' + collectionName + '/new';
            });
          </script>

        </div>

        <div class="span9">
          {{>content}}
        </div>
      </div>

    </div>

  </body>
</html>



